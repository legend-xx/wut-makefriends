/* miniprogram/pages/friendList/friendList.wxss */
.title-friend {
  width: 100%;
  height: 60rpx;
  background-color: rgba(179, 196, 196, 0.342);
  border-bottom: 1px rgba(148, 142, 142, 0.288) solid;
  /* box-shadow: 0px -20px 10px rgba(8, 0, 0, 0.795); */
  line-height: 60rpx;
  color: rgba(89, 94, 94, 0.884);
}

.title-friend text {
  padding-left: 30rpx;
}

.friendList-item {
  height: 120rpx;
  border-bottom: 1px rgba(148, 142, 142, 0.288) solid;
  padding: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.friendList-item view {
  display: flex;
  align-items: center;
}

.friendList-item image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}